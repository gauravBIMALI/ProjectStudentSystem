@model ProjectStudentSystem.ViewModels.VerifyEmailViewModel;
@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100 py-5">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">College Management System</h2>
                    <h4 class="text-center mb-4 text-muted">Create Account</h4>

                    <form asp-action="VerifyEmail" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter your email" >
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Verify</button>
                            <a asp-action="Login" asp-controller="Account" class="btn btn-danger btn-lg">Cancel</a>
                        </div>
                        
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        border-radius: 15px;
        border: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }

    .form-label {
        font-weight: 500;
    }
</style>