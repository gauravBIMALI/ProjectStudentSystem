@model IEnumerable<ProjectStudentSystem.Models.AddClass>

@{
    ViewData["Title"] = "Class List";
    int sn=1;
}

<div class="container py-4">
    <h3 class="mb-3 text-center">All Classes</h3>

    <div class="text-end mb-3">
        <a asp-action="CreateClasses" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Class
        </a>
    </div>

    <table class="table table-bordered table-striped align-middle shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>S.N</th>
                <th>Class</th>
                <th>Section</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@sn</td>
                        <td>@item.Class</td>
                        <td>@item.Section</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this class?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    sn++;
                }                
                
            }

            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No classes added yet.</td>
                </tr>
            }
           
        </tbody>
    </table>
</div>
