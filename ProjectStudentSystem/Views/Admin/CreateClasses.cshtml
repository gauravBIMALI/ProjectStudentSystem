@model ProjectStudentSystem.ViewModels.AddClassViewModel

@{
    ViewData["Title"] = "Add New Class";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Add New Class</h4>

                    <form asp-action="CreateClasses" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Class" class="form-label"></label>
                            <input asp-for="Class" class="form-control" />
                            <span asp-validation-for="Class" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Section" class="form-label"></label>
                            <input asp-for="Section" class="form-control" />
                            <span asp-validation-for="Section" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a asp-action="ClassesList" class="btn btn-secondary ms-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
