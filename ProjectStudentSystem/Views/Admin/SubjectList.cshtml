@model IEnumerable<ProjectStudentSystem.Models.AddSubject>

@{
    ViewData["Title"] = "Subjects List";
    int sn = 1;
}

<div class="container py-4">
    <h3 class="mb-3 text-center">Subjects List</h3>

    <div class="text-end mb-3">
        <a asp-action="AddSubject" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Subject
        </a>
    </div>

    <table class="table table-striped table-bordered align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th class="text-center">S.N</th>
                <th>Class</th>
                <th>Subject Name</th> 
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var subject in Model)
                {
                    <tr>
                        <td class="text-center">@sn</td>
                        <td>Class @subject.Class</td>
                        <td>@subject.Subject</td>
                       
                        <td class="text-center">
                            <a asp-action="EditSubject" asp-route-id="@subject.Id" class="btn btn-sm btn-outline-primary me-2">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-action="DeleteSubject" asp-route-id="@subject.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    sn++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-3">
                        No subjects found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
