@model ProjectStudentSystem.ViewModels.AdminProfileViewModel
@{
    ViewData["Title"] = "Edit Admin Profile";
}

<style>
    
    body {
        margin-bottom: 100px;
        accent-color: #28a745;
    }

    
    .profile-edit-card {
        border-radius: 1rem;
        padding: 1.5rem;
    }
    .form-container {
        padding-bottom: 2rem;
    }

    #profilePreview {
        border: 4px solid #f1f1f1;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .submit {
        position: sticky;
        bottom: 10px;
        background-color: white;
        padding-top: 10px;
    }
</style>

<div class="container py-5 form-container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 profile-edit-card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Edit Profile</h3>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <div class="text-center mb-4">
                            <img id="profilePreview"
                                 src="@(Model.ProfileImage ?? "/images/Blank.jpg")"
                                 class="rounded-circle img-fluid"
                                 style="width: 150px; height:150px; object-fit:cover;"
                                 alt="Profile Image">
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfileImageFile" class="form-label">Profile Image</label>
                            <input asp-for="ProfileImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)">
                            <span asp-validation-for="ProfileImageFile" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class=" d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                document.getElementById('profilePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
