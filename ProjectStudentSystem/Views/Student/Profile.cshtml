@model ProjectStudentSystem.ViewModels.AdminProfileViewModel
@{
    ViewData["Title"] = "Admin Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h3 class="card-title mb-3">Admin Profile</h3>

                    <div class="mb-4">
                        <img src="@(Model.ProfileImage ?? "/images/default-profile.png")"
                             class="rounded-circle img-fluid"
                             style="width: 150px; height:150px; object-fit:cover;"
                             alt="Profile Image">
                    </div>

                    <h5 class="mb-2">@Model.Name</h5>
                    <p class="text-muted mb-4">@Model.Email</p>

                    <a asp-action="EditProfile" asp-controller="Student" class="btn btn-primary">
                        Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
